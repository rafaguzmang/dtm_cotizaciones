        <record id="dtm_client_indicadores_view_form" model="ir.ui.view">
            <field name="name">dtm_client_indicadores.view.form</field>
            <field name="model">dtm.client.indicadores</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Ejecutar" name="action_ejecutar" type="object" class="btn btn-primary"/>
                        <button string="Cargar Grafica" name="action_grafica" type="object" class="btn btn-primary"/>
                    </header>
                    <sheet>
                        <div class="row">
                            <div class="col-6">
                                <group>
                                    <field name="fecha_inicial"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group>
                                    <field name="fecha_final"/>
                                </group>
                            </div>
                        </div>
                         <br></br>
                        <div class="row">
                            <div class="col-2">
                                <group>
                                   <field name="low_days"/>
                                   <field name="medium_days"/>
                                   <field name="hi_days"/>
                                </group>
                            </div>
                            <div class="col-2">
                                <group>
                                   <field name="low_percent"/>
                                   <field name="medium_percent"/>
                                   <field name="hi_percent"/>
                                </group>
                            </div>
                        </div>
                        <group>
                            <field name="total"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

